<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
    <url>
        <loc><%= baseUrl %></loc>
        <lastmod><%= moment(new Date()).format( 'YYYY-MM-DD')%></lastmod>
        <changefreq>weekly</changefreq>
        <priority>1.00</priority>
    </url>

    <!-- for each article-->
    <% articles.forEach(function(article){ %>
    <url>
        <loc><%= baseUrl %>/articles/<%= article.id %></loc>
        <lastmod><%= moment(article.time).format( 'YYYY-MM-DD') %></lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.80</priority>
    </url>
    <% });%>

    <!-- static content -->
    <url>
        <loc><%= baseUrl %>/static/wiki-crawler-example</loc>
        <lastmod><%= moment(new Date()).format( 'YYYY-MM-DD')%></lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.60</priority>
    </url>
    <url>
        <loc><%= baseUrl %>/static/impressum</loc>
        <lastmod><%= moment(new Date()).format( 'YYYY-MM-DD')%></lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.40</priority>
    </url>
    <url>
        <loc><%= baseUrl %>/static/404</loc>
        <lastmod><%= moment(new Date()).format( 'YYYY-MM-DD')%></lastmod>
        <changefreq>never</changefreq>
        <priority>0.10</priority>
    </url>
</urlset>